{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": ["**", "!!**/dist"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "includes": ["**", "**/*", "**", "!**/node_modules", "!**/*.html"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "overrides": [
    {
      "includes": ["*.tsx", "*.js", "*.jsx"],
      "linter": {
        "rules": {}
      }
    },
    {
      "includes": ["*.ts"],
      "linter": {
        "rules": {
          "complexity": {
            "useOptionalChain": "error",
            "useFlatMap": "error",
            "noUselessSwitchCase": "error"
          },
          "style": {
            "noInferrableTypes": "off",
            "noNonNullAssertion": "error",
            "useConsistentArrayType": "error",
            "useConsistentMemberAccessibility": "error",
            "useConsistentTypeDefinitions": "error",
            "useReadonlyClassProperties": "error"
          },
          "suspicious": {
            "noConsole": {
              "level": "error",
              "options": {
                "allow": ["warn", "error"]
              }
            },
            "noDoubleEquals": "error",
            "noExplicitAny": "error",
            "noExtraNonNullAssertion": "error",
            "useIsArray": "error"
          }
        }
      }
    }
  ],
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
